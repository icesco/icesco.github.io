---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();


// Define features for each project
const planomaFeatures = [
  { icon: '🎯', title: 'Simple Daily Tracking', desc: 'Check off habits with a single tap' },
  { icon: '📊', title: 'Beautiful Analytics', desc: 'Visualize your progress with insightful charts' },
  { icon: '🏠', title: 'Home Screen Widgets', desc: 'Quick access with iOS widgets' },
  { icon: '☁️', title: 'iCloud Sync', desc: 'Data stays in sync across all devices' },
  { icon: '🎨', title: 'Customizable Themes', desc: 'Multiple color schemes available' },
  { icon: '⚡', title: 'Native Performance', desc: 'Built with SwiftUI and SwiftData' }
];

const resurferFeatures = [
  { icon: '🎨', title: 'Minimal Design', desc: 'Clean, distraction-free interface' },
  { icon: '🔧', title: 'Customizable', desc: '10+ themes and custom app icons' },
  { icon: '📱', title: 'Gesture Controls', desc: 'Swipe gestures for easy navigation' },
  { icon: '🚀', title: 'Fast & Responsive', desc: 'Optimized for speed and performance' },
  { icon: '📺', title: 'Media Viewer', desc: 'View videos, gifs, and images inline' },
  { icon: '💬', title: 'Full Reddit Features', desc: 'Comment, vote, and post with ease' }
];

const features = project.slug === 'planoma' ? planomaFeatures : resurferFeatures;

// Define analytics features for Planoma
const analyticsFeatures = [
  'Weekly and monthly progress reports',
  'Streak tracking and consistency scores', 
  'Calendar heatmap visualization',
  'Goal-based activity monitoring',
  'Achievement badges for milestones'
];

// Define widget types for Planoma
const widgetTypes = [
  { size: 'Small', desc: 'Compact Calendar', icon: '📅' },
  { size: 'Medium', desc: 'Weekly Overview', icon: '📈' },
  { size: 'Large', desc: 'Statistics Dashboard', icon: '📊' },
  { size: 'Lock Screen', desc: 'Quick Check-in', icon: '🔒' }
];

// Define premium features for Planoma
const premiumFeatures = [
  'Unlimited habits and activities',
  'Advanced analytics and detailed reports',
  'Premium themes and customization',
  'Data export options',
  'Priority customer support'
];
---

<BaseLayout title={project.data.title} description={project.data.description}>
  <!-- Hero Section with Gradient -->
  <section class={`relative overflow-hidden ${
    project.slug === 'planoma' 
      ? 'bg-gradient-to-br from-emerald-700 via-green-600 to-emerald-900' 
      : 'bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-800'
  }`}>
    <div class="absolute inset-0 bg-black/20"></div>
    
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 opacity-20">
      <div class={`absolute top-1/4 left-1/4 w-72 h-72 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-300 ${
        project.slug === 'planoma' ? 'bg-green-200' : 'bg-white'
      }`}></div>
      <div class={`absolute top-3/4 right-1/4 w-72 h-72 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-700 ${
        project.slug === 'planoma' ? 'bg-emerald-300' : 'bg-indigo-300'
      }`}></div>
    </div>
    
    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center">
      <!-- App Icon with Glow -->
      <div class="flex justify-center mb-12">
        <div class="relative group">
          <div class={`absolute -inset-4 rounded-3xl blur-2xl opacity-75 group-hover:opacity-100 transition duration-300 ${
            project.slug === 'planoma' 
              ? 'bg-gradient-to-r from-emerald-400 via-green-400 to-emerald-500' 
              : 'bg-gradient-to-r from-blue-400 via-purple-400 to-indigo-400'
          }`}></div>
          <img 
            src={project.data.image} 
            alt={project.data.title}
            class="relative w-32 h-32 md:w-40 md:h-40 rounded-2xl shadow-2xl transform group-hover:scale-105 transition-all duration-300"
          />
        </div>
      </div>
      
      <!-- Title with Animation -->
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 animate-fade-in-up">
        {project.data.title}
      </h1>
      
      <p class={`text-xl md:text-2xl max-w-3xl mx-auto mb-12 animate-fade-in-up animation-delay-200 ${
        project.slug === 'planoma' ? 'text-green-100' : 'text-blue-100'
      }`}>
        {project.data.description}
      </p>
      
      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8 animate-fade-in-up animation-delay-400">
        {project.data.appStore && (
          <a 
            href={project.data.appStore}
            class="inline-flex items-center px-8 py-4 bg-white text-gray-900 rounded-xl hover:bg-gray-100 transition-all duration-300 font-semibold text-lg shadow-xl hover:shadow-2xl transform hover:scale-105"
            target={project.data.appStore.includes('#coming-soon') ? '_self' : '_blank'}
            rel="noopener noreferrer"
          >
            <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
            {project.data.appStore.includes('#coming-soon') ? 'Coming Soon' : 'Download on App Store'}
          </a>
        )}
        {project.data.github && (
          <a 
            href={project.data.github}
            class="inline-flex items-center px-8 py-4 border-2 border-white/30 text-white rounded-xl hover:bg-white/10 backdrop-blur-sm transition-all duration-300 font-semibold text-lg hover:border-white/60"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        )}
      </div>
    </div>
  </section>


  <!-- Overview Section -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
        Why Choose {project.data.title.split(' - ')[0]}?
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
        {project.slug === 'planoma' ? 
          'Transform your daily routine with an elegant habit tracker that makes building positive changes both simple and rewarding.' :
          'Experience Reddit like never before with a minimal, customizable client designed for the modern user.'
        }
      </p>
    </div>
  </section>

  <!-- Screenshots Gallery Section -->
  {project.slug === 'planoma' && (
    <section class="py-20 bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            See Planoma in Action
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            Beautiful, intuitive design that makes habit tracking a joy
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-8">
          {[
            { src: '/images/screenshots-planoma/habit-list.png', alt: 'Habit List View', title: 'Track Daily Habits' },
            { src: '/images/screenshots-planoma/habitlist-grid.png', alt: 'Habit Grid View', title: 'Grid Layout' },
            { src: '/images/screenshots-planoma/statistics.png', alt: 'Statistics Dashboard', title: 'Progress Analytics' },
            { src: '/images/screenshots-planoma/calendar.png', alt: 'Calendar View', title: 'Calendar Overview' },
            { src: '/images/screenshots-planoma/more statistics.png', alt: 'Detailed Statistics', title: 'Detailed Insights' },
            { src: '/images/screenshots-planoma/darkmode-grid-list.png', alt: 'Dark Mode', title: 'Dark Mode Support' }
          ].map((screenshot, index) => (
            <div class="group relative">
              <div class="aspect-[9/16] rounded-2xl overflow-hidden shadow-lg bg-white dark:bg-gray-800 transform group-hover:scale-105 transition-all duration-300">
                <img 
                  src={screenshot.src} 
                  alt={screenshot.alt}
                  class="w-full h-full object-cover object-top"
                  loading="lazy"
                />
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute bottom-4 left-4 text-white font-semibold opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                {screenshot.title}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Key Features Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          ✨ Key Features
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Everything you need in a beautifully designed package
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 group">
            <div class="text-4xl mb-4 group-hover:scale-110 transition-transform duration-300">
              {feature.icon}
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">
              {feature.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              {feature.desc}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Analytics/Advanced Features Section -->
  {project.slug === 'planoma' && (
    <section class="py-20 bg-white dark:bg-gray-900">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
              📈 Advanced Analytics
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
              Planoma goes beyond simple checking - it provides deep insights into your habit patterns.
            </p>
            <div class="space-y-4">
              {analyticsFeatures.map((feature) => (
                <div class="flex items-center">
                  <div class="w-6 h-6 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mr-4">
                    <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span class="text-gray-700 dark:text-gray-300">{feature}</span>
                </div>
              ))}
            </div>
          </div>
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-3xl p-8">
            <div class="aspect-[9/16] bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden">
              <img 
                src="/images/screenshots-planoma/statistics.png" 
                alt="Planoma Statistics Dashboard"
                class="w-full h-full object-cover object-top"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Widget Experience Section -->
  {project.slug === 'planoma' && (
    <section class="py-20 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            📱 Widget Experience
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            Stay connected to your habits throughout the day
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-12 gap-6">
          <!-- Calendar Screenshot -->
          <div class="lg:col-span-4 bg-white dark:bg-gray-900 rounded-2xl p-4 shadow-sm hover:shadow-lg transition-all duration-300 group">
            <div class="aspect-[9/16] rounded-xl overflow-hidden mb-4">
              <img 
                src="/images/screenshots-planoma/calendar.png" 
                alt="Planoma Calendar View"
                class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2 text-center">
              Calendar Overview
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 text-center">
              Track your progress month by month
            </p>
          </div>
          
          <!-- Widget Types -->
          {widgetTypes.map((widget) => (
            <div class="lg:col-span-2 bg-white dark:bg-gray-900 rounded-2xl p-6 text-center shadow-sm hover:shadow-lg transition-all duration-300 group">
              <div class="text-4xl mb-4 group-hover:scale-110 transition-transform duration-300">
                {widget.icon}
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">
                {widget.size}
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                {widget.desc}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Premium Features Section -->
  {project.slug === 'planoma' && (
    <section class="py-20 bg-white dark:bg-gray-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-3xl p-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
            ⭐ Planoma Pro
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
            Unlock the full potential of your habit tracking journey
          </p>
          <div class="grid md:grid-cols-2 gap-6 text-left">
            {premiumFeatures.map((feature) => (
              <div class="flex items-center">
                <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center mr-4">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="text-gray-700 dark:text-gray-300 font-medium">{feature}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}


  <!-- Call to Action -->
  <section class={`py-20 ${
    project.slug === 'planoma' 
      ? 'bg-gradient-to-r from-emerald-600 to-green-700' 
      : 'bg-gradient-to-r from-blue-600 to-purple-600'
  }`}>
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Experience {project.data.title.split(' - ')[0]}?
      </h2>
      <p class={`text-xl mb-12 ${
        project.slug === 'planoma' ? 'text-green-100' : 'text-blue-100'
      }`}>
        {project.slug === 'planoma' 
          ? 'Transform your daily routine and build lasting positive habits' 
          : 'Join thousands of users who are already enjoying this amazing app'
        }
      </p>
      
      {project.data.appStore && (
        <a 
          href={project.data.appStore}
          class="inline-flex items-center px-12 py-4 bg-white text-gray-900 rounded-2xl hover:bg-gray-100 transition-all duration-300 font-bold text-xl shadow-2xl hover:shadow-3xl transform hover:scale-105"
          target={project.data.appStore.includes('#coming-soon') ? '_self' : '_blank'}
          rel="noopener noreferrer"
        >
          <svg class="w-8 h-8 mr-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          {project.data.appStore.includes('#coming-soon') ? 'Get Notified When Available' : 'Download Now'}
        </a>
      )}
    </div>
  </section>

  <!-- Legal Links Section for Planoma -->
  {project.slug === 'planoma' && (
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4">
            Legal & Support
          </h2>
          <p class="text-gray-600 dark:text-gray-400">
            Important information and resources for Planoma users
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-6">
          <a 
            href="/planoma/privacy"
            class="bg-white dark:bg-gray-900 p-6 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 group text-center"
          >
            <div class="text-3xl mb-4 group-hover:scale-110 transition-transform duration-300">🔒</div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Privacy Policy</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">How we protect your data and respect your privacy</p>
          </a>
          
          <a 
            href="/planoma/terms"
            class="bg-white dark:bg-gray-900 p-6 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 group text-center"
          >
            <div class="text-3xl mb-4 group-hover:scale-110 transition-transform duration-300">📋</div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Terms of Service</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">Terms and conditions for using Planoma</p>
          </a>
          
          <a 
            href="/planoma/support"
            class="bg-white dark:bg-gray-900 p-6 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 group text-center"
          >
            <div class="text-3xl mb-4 group-hover:scale-110 transition-transform duration-300">🆘</div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Support</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">Get help and answers to common questions</p>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Navigation -->
  <nav class="py-16 bg-white dark:bg-gray-900">
    <div class="text-center">
      <a 
        href="/projects" 
        class="inline-flex items-center px-8 py-3 bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white rounded-xl hover:bg-gray-200 dark:hover:bg-gray-700 transition-all duration-300 font-semibold text-lg group"
      >
        <svg class="w-5 h-5 mr-3 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to All Projects
      </a>
    </div>
  </nav>
</BaseLayout>

<style>
  /* Custom animations */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
    opacity: 0;
  }

  .animation-delay-300 {
    animation-delay: 0.3s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
    opacity: 0;
  }

  .animation-delay-700 {
    animation-delay: 0.7s;
  }

  .animation-delay-100 {
    animation-delay: 0.1s;
  }

  /* Enhanced shadows */
  .shadow-3xl {
    box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.25);
  }
</style>