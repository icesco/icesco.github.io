---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const blogPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

const sortedPosts = blogPosts.sort((a, b) => 
  new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf()
);
---

<BaseLayout title="Blog" description="Articles about iOS development, Swift, and mobile app development">
  <div class="bg-gray-50 dark:bg-gray-900 py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Blog
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Thoughts on iOS development, Swift, and building great mobile apps
        </p>
      </div>

      {sortedPosts.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-gray-600 dark:text-gray-400 text-lg">
            No blog posts yet. Check back soon for content!
          </p>
        </div>
      ) : (
        <div class="space-y-12">
          {sortedPosts.map(post => (
            <article class="bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-lg transition-shadow p-8">
              <time class="text-sm text-gray-500 dark:text-gray-400">
                {post.data.date.toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
              
              <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mt-2 mb-4">
                <a 
                  href={`/blog/${post.slug}`} 
                  class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                >
                  {post.data.title}
                </a>
              </h2>
              
              <p class="text-gray-600 dark:text-gray-400 text-lg mb-6 leading-relaxed">
                {post.data.description}
              </p>
              
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-6">
                  {post.data.tags.map(tag => (
                    <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
              
              <a 
                href={`/blog/${post.slug}`}
                class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline font-semibold"
              >
                Read More â†’
              </a>
            </article>
          ))}
        </div>
      )}
    </div>
  </div>
</BaseLayout>